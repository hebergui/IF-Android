<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".infos.InfosActivity" >

    <ImageView
        android:id="@+id/infoListItemIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/infoListItemIcon"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/infoListItemName"
            style="@style/WhiteText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/infoListCategoryArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:contentDescription="@string/infoListCategoryArrow"
            android:paddingLeft="10dp"
            android:src="@drawable/category_arrow"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>