<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LightBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/map_item_popup"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/map_item_popup_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:padding="5dp" />

    <TextView
        android:id="@+id/map_item_popup_label"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/map_item_popup_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/map_popup_arrow"
        android:paddingLeft="10dp"
        android:src="@drawable/category_arrow" />

</LinearLayout>